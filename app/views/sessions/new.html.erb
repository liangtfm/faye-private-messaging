<form class="form" action="<%= session_url %>" method="post">

  <h1>Sign in!</h1>

  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <div class="input">
    <label for="user_username">Username</label>
    <input id="user_username" name="username" type="text">
  </div>

  <div class="submit">
    <input class type="submit" value="Log in">
  </div>
</form>